{
    "name": "Metrics Sentinel",
    "description": "On your's privacy guard",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16":"icons/192.png",
        "32":"icons/256.png",
        "48":"icons/384.png",
        "128":"icons/512.png"
    },
    "action": {
        "default_popup":"popup.html"
    },
    "content_scripts":[
        {
            "matches": [ "<all_urls>" ],
            "js": [ "messaging.js" ]
        }
    ],
    "permissions": [
        "scripting",
        "activeTab",
        "webRequest",
        "cookies",
        "sessions",
        "storage",
        "pageCapture",
        "nativeMessaging"
    ],
    "host_permissions": ["*://*.google.com/*"],
      "background": {
        "service_worker": "background.js",
        "type":"module"
    }
}